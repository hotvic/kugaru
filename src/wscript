#! /usr/bin/env python
# encoding: utf-8

def configure(cnf):
    cnf.define('LIBDIR', cnf.env['LIBDIR'])
    cnf.define('DATADIR', cnf.env['INSTALL_DATA_DIR'])
    cnf.write_config_header('config.h')

    if cnf.options.debug:
        cnf.env.CFLAGS = ['-g3', '-O0', '-Wall']
        cnf.env.CXXFLAGS = ['-g3', '-O0', '-Wall']

def build(bld):
    srcs = 'binio.c Main.cpp Conf.cpp Frustum.cpp Game.cpp GameDraw.cpp GameInitDispose.cpp GameTick.cpp Globals.cpp Lights.cpp Models.cpp Objects.cpp Person.cpp Quaternions.cpp Random.c Skeleton.cpp Skybox.cpp Sprites.cpp Terrain.cpp Text.cpp TGALoader.cpp Weapons.cpp openal_wrapper.cpp Input.cpp FileIO.cpp Utility.cpp'
    bld.program(
            source=srcs,
            target='kugaru',
            features='c cxx cxxprogram',

            use=['GLIB', 'GL', 'GLU', 'OPENAL', 'SDL2', 'LIBPNG', 'ZLIB', 'VORBIS', 'VORBISFILE'],
            includes='.')

    # map related programs
    bld.program(source='mapinfo.c binio.c', target='mapinfo', features='c cprogram') 
